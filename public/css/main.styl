/* Colors */
amarillo = #FFF14F
borde = #E0E0DF
fondo = #F9F9F8
negro = #212121
texto = #7A7A7A
twitter = #55acee
/* Fonts */
@font-face
   font-family jinky
   src url(../fonts/JINKY.eot)
   src url(../fonts/JINKY.eot?#iefix) format('embedded-opentype'),
   \	url(../fonts/JINKY.woff) format('woff'),
   \	url(../fonts/JINKY.ttf) format('truetype'),
   \	url(../fonts/JINKY.svg#jinky) format('svg')
   font-style normal
   font-weight bold
@font-face
   font-family bubble
   src url(../fonts/bubblegumsansregular.eot)
   src url(../fonts/bubblegumsansregular.eot?#iefix) format('embedded-opentype'),
   \	url(../fonts/bubblegumsansregular.woff) format('woff'),
   \	url(../fonts/bubblegumsansregular.ttf) format('truetype'),
   \	url(../fonts/bubblegumsansregular.svg#jinky) format('svg')
   font-style normal
   font-weight noraml
/* Styles */
body
    background-color #ececec
    color texto
    font-size 16px
	#container
		padding 0 1%
	header
		background url(../images/header.png)
		background-size cover
		background-repeat no-repeat
		color white
		font-size 1.4em
		overflow hidden
		padding 2.5em .7em 0 .5em
		position relative
		h1
			float right
			font-family jinky
			margin .1em .4em .1em 0
		img
			float right
			margin-top .5em
			width 150px
	nav
		position relative
		ul 
			list-style none
			margin 0
			padding 0 0 0 .5em
			li 
				display inline-block
				margin: 0 3% 0 0
				width 22%
				a 
					border-bottom 0.2em solid negro
					display block 
					color negro
					font-family bubble
					font-size 1.2em  
					font-weight bold
					padding 0.6em 0.3em .2em 1em
					text-align center
					text-decoration none
				a:hover
					border-color amarillo
	#main
		background-color: fondo
		margin: auto
		max-width: 1080px
	article#info-proyecto
		background-color amarillo
		color negro
		display block
		padding 1em 3em 3em 3em
		h3
			font-size 5em
			font-family jinky
			margin  0
		p
			font-size 1.5em
			margin 0 0 0.7em 0
	section#colaboradores
		padding 0em 2% 3em 2%
		h3
			font-size 3em
			margin 0.5em 0
			text-align center
		article 
			border 0.2em solid borde
			margin-bottom 1em
			min-height 140px
			overflow hidden
			position relative
			padding 1%
			figure.imagen_item
				border-radius 50%
				float left;
				height 150px
				margin 1em 1em 0 0
				overflow: hidden
				width 150px
				img
					width 100%
			h4.nick
				color twitter	
				font-size 2em
				margin 0
			p
				font-size 1.2em 
	section#denuncia 
		padding 1em 2em 
		form
			overflow hidden
			padding 0 10%
			font-size 1.2em
			h2 
				color negro
				font-size 1.1em
				text-align center
				span
					background-color amarillo
					padding .5em .2em
			input
				display block
			input[type=button]
				margin 0 14%
				padding 1em 1%
				width 70%
				font-size 1.2em
				background-color negro
				color white
			input[type=text], textarea
				margin-bottom 1em
				padding 1em .4em
				width 95%
		img#taxista
			display none 				
		#login
			padding 1%
			position relative
			img 
				width 80%
				margin 0 10%
			p 
				font-size 1.2em
				text-align center
/* Media Responsive */		
@media screen and (min-width: 600px)
	body header 
		h1
			font-size 3em
		img 
			margin-right 1em
			margin-top 1em
			width 250px
	nav ul li a 
		font-size 1.1em
	section#denuncia 
		form h2 
			font-size 1.4em
		#login
			img 
				width 66%
				margin 0 15%
			p 
				font-size 1.6em
@media screen and (min-width: 800px)
	body header 
		h1
			font-size 5em
		img 
			width 400px
	nav ul li a 
		font-size 1.5em
	section#colaboradores
		overflow: hidden
		article.colaborador 
			float left
			margin 0.5%;
			width 46%
	section#denuncia
		overflow hidden 
		form h2 
			font-size 1.6em
		img#taxista
			display inline-block
			margin 1.5em 2% 1em 4%
			width 50%
		#login
			float left
			margin 0.5%
			width 40%
			img 
				margin 0
				width 100%
			p 
				margin-top 0
				text-align left